@model PhotoFormModel
@{
    ViewData["Title"] = $"Edit '{Model.PhotoEntry.Title}'";
    FormModel newform = new()
            {
                Title = $"Form di edit foto #{Model.PhotoEntry.Id}",
                Action = "Update"
            };
}

<h1 class="text-center">@newform.Title</h1>
<div class="row">
    <div class="col-md-6 m-auto">
        <form asp-controller="Photoalbum" asp-action="@newform.Action" asp-route-id="@Model.PhotoEntry.Id" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.Partial("_FormPhoto")
            <input type="hidden" asp-for="@Model.PhotoEntry.Id" />
        </form>
    </div>
</div>