@{
    ViewData["Title"] = "Home Page";
}

<div class="col-12">
    <div class="d-flex justify-content-between align-items-center py-5">
        <h1>Homepage</h1>
        <div>
            <input type="text" class="form-control" placeholder="Cerca per nome" onkeyup="getAllPhotos(this.value)" />
        </div>
    </div>

    <row id="photo_list">
        
    </row>
    <div id="no_photos" class="d-none">
        <h2>Nessuna foto da mostrare</h2>
    </div>
    <div class="d-none py-5 text-center" id="loader">
        <h2>Cerco le foto...</h2>
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
            </div>
        </div>
    </div>

    <button class="btn btn-outline-dark btn_message" data-bs-toggle="modal" data-bs-target="#modal">
        <i class="fa-regular fa-comment"></i>
    </button>
    <!-- Modal -->
    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Manda un messaggio</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <!-- mail -->
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="msgEmail">
                            <label for="msgEmail">Titolo</label>
                        </div>

                        <!-- testo -->
                        <div class="form-floating mb-3">
                            <textarea class="form-control" id="msgText" style="height: 200px"></textarea>
                            <label for="msgText">Messaggio</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="sendMsg">Invia</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/API/index.js"></script>
}